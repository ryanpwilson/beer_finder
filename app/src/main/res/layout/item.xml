<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/logo"
            android:padding="10dp"
            android:text="Name"
            android:textSize="24sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/logo"
            android:layout_below="@id/title"
            android:padding="10dp"
            android:text="Name"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ibu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ibu_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IBU: "
                />
            <TextView
                android:id="@+id/ibu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/abv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibu_container"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/abv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABV: "
                />
            <TextView
                android:id="@+id/abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/abv_container"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingredients_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_container"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ingredients_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients: "
                />
            <TextView
                android:id="@+id/ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pairings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredients_container"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pairings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Pairings: "
                />
            <TextView
                android:id="@+id/pairings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#000" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="328dp"
            android:backgroundTint="#ffff"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>